<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <?foreach {device}?>
      <device>
        <name>{device}</name>
        <config>
          <!-- IOS DEVICE TEMPLATE -->
          <interface xmlns="urn:ios">
            <FastEthernet>
              <name>{interface-num}.{subif-num}</name>
              <encapsulation>
                <dot1Q>
                  <vlan-id>{subif-num}</vlan-id>
                </dot1Q>
              </encapsulation>
              <ip>
                <address>
                  <primary>
                    <address>{ip-address}</address>
                    <mask>{mask}</mask>
                  </primary>
                </address>
              </ip>
            </FastEthernet>
          </interface>
          <router xmlns="urn:ios">
            <ospf>
              <id>1</id>
              <non-vrf>
                <network>
                  <ip>{ip-address}</ip>
                  <mask>0.0.0.0</mask>
                  <area>0</area>
                </network>
              </non-vrf>
            </ospf>
          </router>
        </config>
      </device>
    <?end?>
  </devices>
</config-template>
